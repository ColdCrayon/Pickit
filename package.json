{
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@types/jest": "^30.0.0",
    "firebase": "^12.4.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "test": "jest",
    "emulators": "firebase emulators:start --only firestore",
    "test:emulated": "firebase emulators:exec --only firestore \"npm test\""
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/__tests__",
      "<rootDir>/web"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.jest.json"
        }
      ]
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.(ts|js)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      ".integration.test.js"
    ]
  },
  "dependencies": {
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^7.0.0"
  }
}